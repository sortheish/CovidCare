<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/noti_details_title"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:background="@color/solid_spinner_color"
            android:fontFamily="@font/roboto"
            android:maxLines="3"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Self-assistance/checkup screen,SSelf-assistance/checkup screen,Self-assistance/checkup screen,Self-assistance/checkup screen" />
        <TextView
            android:id="@+id/noti_details_sender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noti_details_title"
            tools:text="Cybage HR Deparment" />

        <TextView
            android:id="@+id/noti_details_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/solid_dialog_text_color"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noti_details_sender"
            tools:text="19Aug2020" />

        <ImageView
            android:id="@+id/notif_details_image"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/desc_content_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noti_details_date"
            app:srcCompat="@drawable/about" />

        <TextView
            android:id="@+id/noti_detail_links"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/text_link"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/notif_details_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notif_details_image"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/notif_details_link_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:autoLink="web"
            android:linksClickable="true"
            app:layout_constraintBottom_toTopOf="@+id/notif_details_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/noti_detail_links"
            app:layout_constraintTop_toBottomOf="@+id/notif_details_image"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Task planned for next week (08/24 – 08/28)Task planned for next week (08/24 – 08/28)" />

        <TextView
            android:id="@+id/notif_details_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Task planned for next week (08/24 – 08/28) ·        Will work on any feedback/new ticket assigned ·        Will continue work on internal app.  Planned Features : 1. Self-assistance/checkup screen.                               2. Helpline screen modification                                3. Push notification triggering functionality for                                    change in Firebase database ·        Will continue exploring tech features and mobile technologies." />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>